<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/date_time_view"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textColor="@color/colorMessageText"
            android:textSize="@dimen/date_time_size"
            android:fontFamily="sans-serif" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/message_normal_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:padding="20dp"
            android:textColor="@color/colorMessageText"
            android:textSize="@dimen/message_text_size"
            android:fontFamily="sans-serif"
            android:foreground="@drawable/item_ripple"
            android:background="@drawable/border"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/message_delete_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:visibility="gone">
        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center" />
        <TextView
            android:id="@+id/message1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:padding="20dp"
            android:textColor="@color/colorMessageText"
            android:textSize="@dimen/message_text_size"
            android:fontFamily="sans-serif"
            android:background="@drawable/border"/>
    </LinearLayout>
</LinearLayout>